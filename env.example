NODE_ENV=development
PORT=3001
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/menofhunger?schema=public

# Web origins allowed to call the API with cookies (comma-separated).
ALLOWED_ORIGINS=http://localhost:3000

# Auth secrets (required in production; recommended everywhere)
OTP_HMAC_SECRET=dev-otp-secret-change-me
SESSION_HMAC_SECRET=dev-session-secret-change-me

# Cookie domain (production suggested: .menofhunger.com)
# COOKIE_DOMAIN=.menofhunger.com

# Dev-only: set true to disable Twilio SMS sending (use 000000 bypass).
# DISABLE_TWILIO_IN_DEV=true

# Twilio (production only)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_VERIFY_SERVICE_SID=        # Twilio Verify Service SID (starts with VA...)
# TWILIO_FROM_NUMBER=               # optional if using messaging service (E.164, e.g. +16319436889)
# TWILIO_MESSAGING_SERVICE_SID=     # optional alternative to TWILIO_FROM_NUMBER (starts with MG...)

# Cloudflare R2 (public assets: avatars/banners)
# R2_ACCOUNT_ID=
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_BUCKET=
# R2_PUBLIC_BASE_URL=               # e.g. https://pub-<random>.r2.dev  OR your custom domain

# Giphy (server-side proxy for GIF search)
# GIPHY_API_KEY=ddms51QMkwXXSvnuoksrURBytHig8CDO

# Global API rate limiting (generous defaults if unset).
# RATE_LIMIT_TTL_SECONDS=60
# RATE_LIMIT_LIMIT=600

# Route-specific throttles (optional)
# RATE_LIMIT_AUTH_START_TTL_SECONDS=60
# RATE_LIMIT_AUTH_START_LIMIT=8
# RATE_LIMIT_AUTH_VERIFY_TTL_SECONDS=60
# RATE_LIMIT_AUTH_VERIFY_LIMIT=20
# RATE_LIMIT_POST_CREATE_TTL_SECONDS=60
# RATE_LIMIT_POST_CREATE_LIMIT=30
# RATE_LIMIT_INTERACT_TTL_SECONDS=60
# RATE_LIMIT_INTERACT_LIMIT=180
# RATE_LIMIT_UPLOAD_TTL_SECONDS=60
# RATE_LIMIT_UPLOAD_LIMIT=60

# Reverse proxy (Render, etc): trust X-Forwarded-* for req.ip / req.protocol.
# TRUST_PROXY=true

# Body size limits (protect memory; uploads have separate limits).
# BODY_JSON_LIMIT=1mb
# BODY_URLENCODED_LIMIT=25kb

# CSRF hardening (cookie auth): in production, require Origin/Referer on unsafe methods.
# REQUIRE_CSRF_ORIGIN_IN_PROD=true

# Dev-only: log each request (useful for debugging).
# LOG_REQUESTS=true

# Dev-only: print a startup config summary.
# LOG_STARTUP_INFO=true

